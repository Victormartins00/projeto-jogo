class Mapa {
    private TipoTerreno[][] matriz;
    private int linhas;
    private int colunas;

    public Mapa(int linhas, int colunas) {
        this.linhas = linhas;
        this.colunas = colunas;
        this.matriz = new TipoTerreno[linhas][colunas];
    }

    public void inicializarMapaPadrao() {
        // Mapa fornecido pelo usuário
        String mapaPadrao =
                "**********\n" +
                "*  DDDDD *\n" +
                "*  DDDDD *\n" +
                "*  FFFFF *\n" +
                "*  FFFFF *\n" +
                "*  SSSSS *\n" +
                "*  SSSSS *\n" +
                "*  WWWWW *\n" +
                "*  WWWWW *\n" +
                "**********";

        // Converter o mapa de string para matriz de TipoTerreno
        for (int i = 0; i < linhas; i++) {
            for (int j = 0; j < colunas; j++) {
                char terrenoChar = mapaPadrao.charAt(i * (colunas + 1) + j); // +1 para contar os caracteres de nova linha
                matriz[i][j] = charParaTipoTerreno(terrenoChar);
            }
        }
    }

    private TipoTerreno charParaTipoTerreno(char terrenoChar) {
        switch (terrenoChar) {
            case 'D':
                return TipoTerreno.DESERTO;
            case 'F':
                return TipoTerreno.FLORESTA;
            case 'S':
                return TipoTerreno.SAVANA;
            case 'W':
                return TipoTerreno.PANTANO;
            case '*':
                return TipoTerreno.BORDA;
            default:
                return null; // Caracter inválido
        }
    }

    // ... (restante do código)
}

class JogoExpedicao {
    // ... (restante do código)

    public static void main(String[] args) {
        Mapa mapa = new Mapa(10, 10);
        mapa.inicializarMapaPadrao();
        mapa.mostrarMapa();

        // Restante do código
    }
}

import java.util.Scanner;

public class Mapa {
    int linha;
    int coluna;
    int posXJogador;
    int posYJogador;
    String movimento;
    String mapaPadrao[][] = new String[10][10];
    Scanner sc = new Scanner(System.in);

    public Mapa(int linha, int coluna) {
        this.linha = linha;
        this.coluna = coluna;
    }


    public void criarMapaPadrao(){
        linha = 10;
        coluna = 10;
        for (int i = 0; i < linha; i++) {
            for (int j = 0; j < coluna; j++) {
                if (i == 0 || i == linha - 1 || j == 0 || j == coluna - 1) {
                    mapaPadrao[i][j] = "*";
                } else {
                    mapaPadrao[i][j] = " "; 
                }
            }
        }
    }

    public void criarJogador(){
        posXJogador = 3;
        posYJogador = 5;

        mapaPadrao[posXJogador][posYJogador] = "&";
    }

    public void moverJogador(){
        System.out.println("Mova o jogador: W A S D");
        movimento = sc.nextLine();

        switch(movimento){
            case "a":
            mapaPadrao[posXJogador][posYJogador] = " ";
            posYJogador--;
            mapaPadrao[posXJogador][posYJogador] = "&";
            break;
            case "d":
            mapaPadrao[posXJogador][posYJogador] = " ";
            posYJogador++;
            mapaPadrao[posXJogador][posYJogador] = "&";
            break;
            case "w":
            mapaPadrao[posXJogador][posYJogador] = " ";
            posXJogador--;
            mapaPadrao[posXJogador][posYJogador] = "&";
            break;
            case "s":
            mapaPadrao[posXJogador][posYJogador] = " ";
            posXJogador++;
            mapaPadrao[posXJogador][posYJogador] = "&";
            break;
        }
        
    }

    public void imprimirMapa(){
        for (int i = 0; i < linha; i++) {
            for (int j = 0; j < coluna; j++) {
                System.out.print(mapaPadrao[i][j] + " ");
            }
            System.out.println();
        }
        
    }
    
}
